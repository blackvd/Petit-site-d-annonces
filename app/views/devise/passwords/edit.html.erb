<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="columns is-4">

        <h2 class="title is-2">Changer le mot de passe</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="field">
            <div class="control">
              <%= f.input :password,
                          label: "Nouveau mot de passe",
                          required: true,
                          autofocus: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { class: "input", autocomplete: "new-password" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation, label: "Confirmer nouveau mot de passe", required: true,
                          input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

            <%= f.button :submit, "Changer le mot de passe", class: "button is-info" %>

        <% end %>
        <br>
        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</section>