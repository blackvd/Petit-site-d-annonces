<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h2 class="title is-2">Nouvelle annonce</h2>

        <%= simple_form_for @advertisement do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :title, label: "Entrez le titre de l'annonce", input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Le titre de l'annonce", autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :content, label: "Entrez le contenu de l'annonce", input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "faites une description de l'annonce", autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :price, label: "Entrez le prix de l'annonce", input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, autofocus: true %>
            </div>
          </div>

          <%= f.button :submit, 'Soumettre l\'annonce',class: "button is-info" %>

        <% end %>

      </div>
    </div>
  </div>
</section>


