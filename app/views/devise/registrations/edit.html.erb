<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h2 class="title is-2">Editer son profil</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :username, required: true, autofocus: true,
                          input_html: { class: "input" }, wrapper: false, label_html: {label: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :email, required: true, autofocus: true,
                          input_html: { class: "input" }, wrapper: false, label_html: {label: "label"} %>
            </div>
          </div>


            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

          <div class="field">
            <div class="control">
              <%= f.input :password,
                          hint: "leave it blank if you don't want to change it",
                          required: false,
                          input_html: {class: "input", autocomplete: "new-password" }, wrapper: false, label_html: {label: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
                          required: false,
                          input_html: { class: "input", autocomplete: "new-password" }, wrapper: false, label_html: {label: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :current_password,
                          hint: "we need your current password to confirm your changes",
                          required: true,
                          input_html: {class: "input", autocomplete: "current-password" }, wrapper: false, label_html: {label: "label"} %>
            </div>
          </div>

            <%= f.button :submit, "Modifier les informations", class: "button is-info is-medium" %>

        <% end %>
        <br>
        <h3 class="title is-5">Cancel my account</h3>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", root_path %>


      </div>
    </div>
  </div>
</section>