<article class="media">
  <div class="media-left">
    <figure class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/64x64.png" alt="Image">
    </figure>
  </div>
  <div class="media-content">
    <div class="content">
      <p class="control">
        <%= simple_form_for([@advertisement, @advertisement.comments.build]) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :content, label: "Commentaire",input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Que pensez-vous de cette annonce ?", autofocus: true  %>
            </div>
          </div>

          <%= f.button :submit, 'Poster le commentaire', class: "button is-info" %>

        <% end %>
      </p>
    </div>
  </div>
</article>