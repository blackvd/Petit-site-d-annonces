<div class="column is-narrow">
  <div class="box" style="width: 200px">
    <p class="title is-5">Propriétaire de l'annonce</p>
    <p>
      Pseudo : <%= current_user.username %> <br>
      Email : <%= current_user.email %>
    </p>
  </div>
</div>
<div class="column">
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-128x128">
          <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= @advertisement.title %></strong> | <small>Prix : <%= @advertisement.price %></small>
            <br>
            <small><i>Postée à <%= @advertisement.updated_at %></i></small>
            <br>
            <%= @advertisement.content %>
          </p>
        </div>
        <% if current_user.admin? && @advertisement.waiting? %>
          <nav class="level is-mobile">
            <div class="level-right">
              <%= link_to advertisement_path(@advertisement), method: :patch,class: "level-item" do %>
                <button class="button is-primary is-rounded">
                  <span class="icon">
                    <i class="fa fa-check"></i>
                  </span> <span>Publier</span>
                </button>
              <% end %>
            </div>
          </nav>
        <% end %>
      </div>
    </article>
  </div>
</div>