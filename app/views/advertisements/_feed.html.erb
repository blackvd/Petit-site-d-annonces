<% @advertisements.each do |advertisement| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-128x128">
          <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= advertisement.title %></strong> | <small>Prix : <%= advertisement.price %></small>
            <br>
            <small><i>Postée à <%= advertisement.updated_at %></i></small>
            <br>
            <p><%= advertisement.content %></p>
            <% if user_signed_in? && @current_user.admin? %>
              <button class="button is-black is-rounded">
                <% if !advertisement.waiting? %>
                  Annonce publiée
                <% else %>
                  Annonce en attente de publication
                <% end %>
              </button>
            <% end %>
          </p>
        </div>
        <nav class="level is-mobile">
          <div class="level-left">
            <%= link_to advertisement, class: "level-item" do %>
              <span class="icon"><i class="fa fa-eye" aria-hidden="true"></i></span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>