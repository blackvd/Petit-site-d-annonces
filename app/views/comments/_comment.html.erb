<article class="media">
  <div class="media-left">
    <figure class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/64x64.png" alt="Image">
    </figure>
  </div>
  <div class="media-content">
    <div class="content">
      <p>
        <strong><%= User.find(comment.user_id).username %></strong> <small><i>posté à <%= comment.created_at %></i></small>
        <br>
        <%= comment.content %>
      </p>
    </div>
  </div>
</article>