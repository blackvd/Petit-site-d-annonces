<!DOCTYPE html>
<html>
  <head>
    <title>AdvertisementsSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar is-info" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5">LES ANNONCES</h1>
        <% end %>
        <div role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarForAds">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </div>
      </div>

      <div id="navbarForAds" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if user_signed_in? %>
                <%= link_to "Nouvelle annonce", new_advertisement_path, class: "button is-light is-rounded" %>

                <div class="navbar-item has-dropdown is-hoverable">
                  <a class="navbar-link">
                    <%= current_user.email %>
                  </a>
                  <div class="navbar-dropdown">
                    <%= link_to "Éditer son profil", edit_user_registration_path, class: "navbar-item" %>
                    <%= link_to "Voir mes annonces", advertisements_user_advertisements_path, class: "navbar-item" %>
                    <hr class="navbar-divider">
                    <%= link_to "Se déconnecter", destroy_user_session_path,method: :delete, class: "navbar-item" %>
                  </div>
                </div>
              <% else %>
                <%= link_to "Se connecter", new_user_session_path, class: "button is-info is-rounded" %>
                <%= link_to "S'inscrire", new_user_registration_path, class: "button is-primary is-rounded" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </nav>

    <% if flash[:notice] %>

      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>

    <% end %>

    <% if flash[:alert] %>

      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>

    <% end %>

    <div class="container">
      <%= yield %>
    </div>


  </body>
</html>
